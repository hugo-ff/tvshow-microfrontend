{
  "name": "tvshow-microfrontend",
  "version": "1.0.0",
  "repository": "git@github.com:hugo-ff/tvshow-microfrontend.git",
  "author": "Hugo Flotts <hugoflotts@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && webpack --config webpack.config.js",
    "start": "webpack-dev-server --open --hot",
    "serve:dev": "webpack serve",
    "serve": "yarn build && serve dist -p 3002",
    "clean": "rm -rf dist",
    "test": "jest --watch --config=jest.config.js --passWithNoTests",
    "typecheck": "tsc --pretty --noEmit",
    "lint": "eslint --ignore-path .gitignore",
    "lint:fix": "eslint --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write"
    ]
  },
  "dependencies": {
    "i18next": "^23.7.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "styled-components": "^6.1.1",
    "styled-normalize": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@faker-js/faker": "^8.3.1",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "babel-loader": "^9.1.3",
    "eslint": "^8.56.0",
    "eslint-config-codely": "^2.1.3",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
